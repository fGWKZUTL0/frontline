<div id="<%= dom_id user %>">
  <p class="my-5">
    <%= image_tag(user.resume.preview(resize_to_limit: [400, 600])) if user.resume.present? %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Family name:</strong>
    <%= user.family_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= user.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= t "activerecord.models.#{user.user_model_type.underscore}" %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Position:</strong>
    <%= user.user_model.position.name %>
  </p>

</div>
